<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="base_default_action">
        <item name="multipleInputs">true</item>
        <item name="rotateButtons">30.0</item>
        <item name="spacing">0.1</item>
    </style>

    <style name="default_action_3" parent="base_default_action">
        <item name="rows">1</item>
        <item name="cols">3</item>
        <item name="rotateButtons">15.0</item>
        <item name="labels">@array/defaut_action_labels_3</item>
    </style>

    <style name="default_action_4" parent="base_default_action">
        <item name="rotateButtons">45.0</item>
        <item name="rows">2</item>
        <item name="cols">2</item>
        <item name="labels">@array/defaut_action_labels_4</item>
    </style>

    <style name="default_action_1" parent="base_default_action">
        <item name="rows">1</item>
        <item name="cols">1</item>
        <item name="spacing">0.0</item>
    </style>

    <style name="default_action_2" parent="base_default_action">
        <item name="rows">1</item>
        <item name="cols">2</item>
        <item name="spacing">0.2</item>
        <item name="labels">@array/defaut_action_labels_2</item>
    </style>

    <style name="default_action_6" parent="base_default_action">
        <item name="rotateButtons">10.0</item>
        <item name="rows">2</item>
        <item name="cols">3</item>
    </style>

    <style name="default_directionpad">
        <item name="deadZone">0.3</item>
        <item name="buttonCenterDistance">0.45</item>
        <item name="rightArrowDrawable">@drawable/direction_right_normal</item>
        <item name="rightArrowPressedDrawable">@drawable/direction_right_pressed</item>
    </style>

    <style name="n64_cbuttons">
        <item name="deadZone">0.3</item>
        <item name="buttonCenterDistance">0.50</item>
        <item name="rightArrowDrawable">@drawable/direction_alt_right_normal</item>
        <item name="rightArrowPressedDrawable">@drawable/direction_alt_right_pressed</item>
    </style>

    <style name="psp_action_buttons" parent="base_default_action">
        <item name="rotateButtons">45.0</item>
        <item name="rows">2</item>
        <item name="cols">2</item>
        <item name="icons">@array/psx_action_drawable_labels</item>
    </style>

    <style name="default_icon_button">
        <item name="android:layout_width">@dimen/icon_button_size</item>
        <item name="android:layout_height">@dimen/icon_button_size</item>
        <item name="android:padding">@dimen/icon_button_padding</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
    </style>

    <style name="default_menu" parent="default_icon_button">
        <item name="android:src">@drawable/menu_button</item>
    </style>

    <style name="default_stick">
        <item name="JV_buttonColor">@color/touch_control_text_color</item>
        <item name="JV_backgroundColor">@color/touch_control_default</item>
        <item name="JV_borderColor">@color/touch_control_stroke</item>
        <item name="JV_borderWidth">@dimen/touch_drawable_stroke_width</item>
        <item name="JV_borderAlpha">@integer/touch_drawable_stroke_opacity</item>
        <item name="JV_buttonSizeRatio">33%</item>
        <item name="JV_backgroundSizeRatio">66%</item>
        <item name="JV_fixedCenter">false</item>
    </style>
</resources>
